<Window x:Class="ItogProjectOnEF.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItogProjectOnEF"
        mc:Ignorable="d"
        Title="EmployeeWindow" Height="450" Width="800">
    <Grid Background="Wheat">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="208*"/>
            <ColumnDefinition Width="104*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="326*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame x:Name="PageFrame" Grid.ColumnSpan="6" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
        <Button x:Name="Products" Background="Orange" Grid.ColumnSpan="3" Content="Продукты" Click="Products_Click"></Button>
        <Button x:Name="Sales" Background="Orange" Grid.ColumnSpan="3" Grid.Column="3" Content="Скидки" Click="Sales_Click"></Button>
        
    </Grid>
</Window>
